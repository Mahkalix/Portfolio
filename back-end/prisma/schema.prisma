datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  year        Int
  use         String
  visit       String
  view        String
  cover       String
  tools       Json    // Utilisé pour stocker les outils avec leurs icônes
}
